@import "./iconfont.wxss";

page {
  background-color: #f1f1f1;
}

.header {
  position: relative;
  height: 400rpx;
  width: 100%;
  overflow: hidden;
}

.mask {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 600rpx;
  background-color: #fdb92c;
  border-radius: 100%;
  z-index: -99;
}

.info {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}

.avatar {
  margin-top: 60rpx;
  width: 200rpx;
  height: 200rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}

.userinfo-nickname {
  margin-top: 20rpx;
  width: 100%;
  color: #fff;
  text-align: center;
}

.message {
  position: absolute;
  top: 0rpx;
  left: 60rpx;
  width: 60rpx;
  height: 60rpx;
  z-index: 999;
}

.icon-xinfeng {
  top: 10rpx;
  position: absolute;
  color: #fff;
  font-size: 48rpx;
}

.msg-count {
  position: absolute;
  top: 0rpx;
  left: 30rpx;
  color: #fff;
  background-color: #eb4559;
  display: block;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 20rpx;
  text-align: center;
  border-radius: 100%;
}

/* 导航 */

.nav {
  overflow: hidden;
  margin-right: 30rpx;
  margin-left: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 50rpx;
  margin-top: 50rpx;
  box-sizing: border-box;
  display: block;
}

.nav-item {
  padding-right: 90rpx;
  position: relative;
  display: flex;
  padding: 0 30rpx;
  min-height: 100rpx;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.content {
  font-size: 30rpx;
  line-height: 1.6em;
  flex: 1;
}

button.text {
  position: static;
  width: 100%;
  height: 1.6em;
  text-align: left;
  border: none;
  padding: 0;
  margin: 0;
  font-size: 30rpx;
  line-height: 1.6em;
  flex: 1;
  display: inline-block;
  background-color: rgba(0, 0, 0, 0);
}
button.text::after {
  content: '';
  border: none;
}

.img {
  display: inline-block;
  margin-right: 10rpx;
  width: 1.6em;
  height: 1.6em;
  vertical-align: middle;
  max-width: 100%;
}

.text {
  color: #808080;
}

.content .iconfont {
  color: #fdb92c;
  font-weight: 600;
  margin-right: 30rpx;
}

.content .icon-xiangyou {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
  bottom: 0;
  color: #808080;
  font-size: 28rpx;
}